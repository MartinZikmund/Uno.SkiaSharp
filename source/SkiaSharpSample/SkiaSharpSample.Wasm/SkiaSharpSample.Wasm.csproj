    <Compile Include="..\..\..\samples\Gallery\UWP\SkiaSharpSample\App.xaml.cs" Link="App.xaml.cs" />
    <Compile Include="..\..\..\samples\Gallery\UWP\SkiaSharpSample\MainPage.xaml.cs" Link="MainPage.xaml.cs" />
